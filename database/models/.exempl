module.exports = (sequelize, DataTypes) => {
    const User = sequelize.define('user', {
        id: {
            type: DataTypes.INTEGER,
            primaryKey: true,
        },
        is_bot:{
            type: DataTypes.BOOLEAN,
        },
        first_name: {
            type: DataTypes.STRING,
        },
        last_name: {
            type: DataTypes.STRING,
        },
        username: {
            type: DataTypes.STRING
        },
        phone_number:{
            type: DataTypes.STRING
        },
        language_code:{
            type: DataTypes.STRING
        },
        // role:{
        //     type: DataTypes.STRING
        // },
        last_login: {
            type: DataTypes.DATE
        },
        status: {
            type: DataTypes.ENUM('active', 'inactive'),
            defaultValue: 'active'
        },
    }, {
        charset: 'utf8',
        collate: 'utf8_unicode_ci',
        tableName: 'user',
        timestamps: true
    })
    User.associate = (models)=>{
        User.hasMany(models.roles,{as:'role'})
    };

    return User;
};
